

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Recently Added Products</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
            @foreach (var offer in recentlyAddedDeals)
            {
                <li class="item">
                    <div class="product-img">
                        <img src="@(offer.imageUrl)" alt="@(offer.title)" class="img-size-50">
                    </div>
                    <div class="product-info">
                        <a href="@(offer.url)" target="_blank" class="product-title">
                           @(offer.name)
                            
                        </a>
                        <span class="product-description">
                            @(offer.title)
                        </span>
                    </div>
                </li>
            }
           
        </ul>
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="/alloffers" class="uppercase">View All Offers</a>
    </div>
    <!-- /.card-footer -->
</div>

@code {
    [Parameter]
    public IReadOnlyList<DealsOfTheDayModel> recentlyAddedDeals { get; set; }
}
