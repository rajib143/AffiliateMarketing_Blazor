@inject VisitedUserRepository visitedUserRepo
@inject IHttpContextAccessor httpContextAccessor
@inject AppStateService appState
@implements IDisposable

<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Best Deals of the Day</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
            @foreach (var offer in appState.alertHotDealList)
            {
                <li class="item">
                    <div class="product-img">
                        <img src="@(offer.imageUrl)" alt="@(offer.title)" class="img-size-50">
                    </div>
                    <div class="product-info">
                        <a href="@(offer.url)" target="_blank" class="product-title">
                            @(offer.title)
                            <span class="badge badge-success float-right">
                              Buy Now
                            </span>
                        </a>
                        <span class="product-description">
                            @(offer.name)
                        </span>
                    </div>
                </li>
            }

        </ul>
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="/dealsoftheday" class="uppercase">More Deals</a>
    </div>
    <!-- /.card-footer -->
</div>

